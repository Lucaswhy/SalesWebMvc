@model SalesWebMvc.Models.Product
@using System.Globalization;

@{
    ViewData["Title"] = "Details";
}

@{
    List<double> iList = Model.ListInstalments();
    int i = 1;
}

<h2 class="mt-2 text-center">@Html.DisplayFor(model => model.Name)</h2>
<hr />

<div class="container-fluid">
    <div class="d-block float-left">
        @if (Model.Image != null) {
        <img class="img-Details"  src="@Model.Image" />
        }
        else {
        <img class="img-Details" src="/images/noImage400.png" />
        }
    </div>
    <div>
        <h1 class="text-center text-success">
            U$ @Html.DisplayFor(model => model.Price)
            <form asp-action="Buy">
                <button type="submit" class="btn btn-primary float-right">Buy Now</button>
            </form>
        </h1>
        <p class="buy-Up">
            Buy up
            <select>
                @foreach (var item in iList) {
                    <option value="@i">@i x @item.ToString("F2", CultureInfo.InvariantCulture)</option>
                    i++;
                }
            </select>
        </p>
        <p class="description-Name">
            <strong>@Html.DisplayNameFor(model => model.Description)</strong>
        </p>
        <div>
            <p class="product-Description">
                @Html.DisplayFor(model => model.Description)
            </p>

        </div>
    </div>
</div>