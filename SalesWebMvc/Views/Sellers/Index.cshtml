@model IEnumerable<SalesWebMvc.Models.Seller>
@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Create New</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Email)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Birthdate)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.BaseSalary)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model) {
        <tr>
            <td>
                @Html.DisplayFor(m => obj.Name)
            </td>
            <td>
                @Html.DisplayFor(m => obj.Email)
            </td>
            <td>
                @Html.DisplayFor(m => obj.Birthdate)
            </td>
            <td>
                @Html.DisplayFor(m => obj.BaseSalary)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@obj.Id">Details</a>
                <a asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>

</table>